<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Messenger_App.View.MainPage"
             xmlns:viewModel="clr-namespace:Messenger_App.ViewModel"
             xmlns:local="clr-namespace:Messenger_App.View"
             xmlns:model="clr-namespace:Messenger_App.Model"
             >

    <Grid RowDefinitions="*, 40, 30, 40, 30 40, 30, 40, *" ColumnDefinitions="*, 1.5*, *">
        <Entry Grid.Column="1" Grid.Row="1" Placeholder="Username"/>
        <Entry Grid.Column="1" Grid.Row="3" Placeholder="Password"/>
        <Entry Grid.Column="1" Grid.Row="3" Placeholder="Roomname"/>
        <Button Grid.Column="1" Grid.Row="5" Text="Enter"/>
    </Grid>
</ContentPage>
