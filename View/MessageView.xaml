<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Messenger_App.View.MessageView"
             x:Name="this">
    <Grid Grid.RowDefinitions="30, Auto" Grid.ColumnDefinitions="*, 5*" BindingContext="{x:Reference this}">
        <Image Grid.RowSpan="2" Source="{Binding ProfilePicture}"/>
        <Label x:Name="UsernameLabel" Text="{Binding SenderDisplay}" Grid.Column="1"/>
        <Label x:Name="MessageTextLabel" Text="{Binding Source={x:Reference this},Path=DisplayedText}" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</ContentView>
