<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Messenger_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Messenger_App"
    xmlns:view="clr-namespace:Messenger_App.View"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Contacts">
            <ShellContent x:Name="mainPage" ContentTemplate="{DataTemplate view:MainPage}" Route="MainPage"/>
        </Tab>
    </TabBar>
    
    
</Shell>
